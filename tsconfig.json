{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES6",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ]
}